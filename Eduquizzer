    let index = 0;
    let answers = {};
    let timer;
    let timeLeft = 20; // seconds per question

    function shuffle(array){
      for(let i=array.length-1; i>0; i--){
        const j=Math.floor(Math.random()*(i+1));
        [array[i],array[j]]=[array[j],array[i]];
      }
      return array;
    }

    function startTimer(){
      clearInterval(timer);
      timeLeft = 30;
      document.getElementById('timer').innerText = `Time: ${timeLeft}s`;
      timer = setInterval(()=>{
        timeLeft--;
        document.getElementById('timer').innerText = `Time: ${timeLeft}s`;
        if(timeLeft<=0){
          clearInterval(timer);
          nextQ(); // auto move to next when time runs out
        }
      },1000);
    }

    function showQ(){
      clearInterval(timer);
      startTimer();
      const q = questions[index];
      document.getElementById('q-subject').innerText = `Question ${index+1}/${questions.length}`;
      document.getElementById('q-text').innerText = q.question;
      const optDiv = document.getElementById('q-options');
      optDiv.innerHTML = '';
      q.options.forEach((opt,i)=>{
        const btn=document.createElement('button');
        btn.innerText=String.fromCharCode(65+i)+'. '+opt;
        btn.disabled = (answers[q.id]!==undefined); // disable all if already answered
        btn.onclick=()=>select(i,btn);
        optDiv.appendChild(btn);
      });
      document.getElementById('explanation').innerText = answers[q.id]!==undefined ? q.explanation : '';
    }

    function select(i,btn){
      const q=questions[index];
      if(answers[q.id]!==undefined) return; // only one time
      answers[q.id]=i;
      const optBtns = document.querySelectorAll('#q-options button');
      optBtns.forEach((b,idx)=>{
        b.disabled=true;
        if(idx===q.answerIndex) b.classList.add('correct');
        if(idx===i && i!==q.answerIndex) b.classList.add('wrong');
      });
      document.getElementById('explanation').innerText = q.explanation;
    }

    function startQuiz(){
      index=0;answers={};
      questions = shuffle(questions); // shuffle questions each time
      document.getElementById('home').classList.add('hidden');
      document.getElementById('results').classList.add('hidden');
      document.getElementById('quiz').classList.remove('hidden');
      showQ();
    }

    function nextQ(){
      if(index<questions.length-1){index++;showQ();}
      else finishQuiz();
    }

    function prevQ(){
      if(index>0){index--;showQ();}
    }

    function finishQuiz(){
      clearInterval(timer);
      let score=0;
      questions.forEach(q=>{ if(answers[q.id]===q.answerIndex) score++; });
      document.getElementById('quiz').classList.add('hidden');
      document.getElementById('results').classList.remove('hidden');
      document.getElementById('score').innerText = `You scored ${score} / ${questions.length}`;
    }

    function goHome(){
      document.getElementById('results').classList.add('hidden');
      document.getElementById('home').classList.remove('hidden');
    }
  </script> 
